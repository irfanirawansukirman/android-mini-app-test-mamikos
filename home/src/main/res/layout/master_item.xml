<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="movieFilter"
                type="id.pamoyanan_dev.l_extras.data.model.MovieFilter"/>

        <variable
                name="masterItemCallback" type="id.pamoyanan_dev.home.master.MasterItemCallback"/>
    </data>

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/dimens_16dp"
            app:cardCornerRadius="0dp">

        <LinearLayout
                android:clickable="true"
                android:focusable="true"
                android:foreground="?selectableItemBackground"
                android:layout_width="match_parent"
                android:onClick="@{() -> masterItemCallback.onItemMovieSelected(movieFilter)}"
                android:layout_height="wrap_content"
                android:minHeight="172dp"
                android:orientation="horizontal">

            <ImageView
                    android:layout_width="128dp"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    app:imageUrl="@{movieFilter.imageUrl}"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop"/>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dimens_16dp"
                    android:paddingRight="@dimen/dimens_16dp">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/fs_joey_bold"
                        android:maxLines="1"
                        android:text="@{movieFilter.title}"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/size_24sp"
                        tools:text="@string/app_name"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimens_16dp"
                        android:fontFamily="@font/fs_joey"
                        android:text="@{movieFilter.vote}"
                        android:textSize="@dimen/size_18sp"
                        tools:text="7.0/10"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimens_16dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/fs_joey"
                        android:maxLines="2"
                        android:text="@{movieFilter.description}"
                        android:textSize="@dimen/size_18sp"
                        tools:text="7.0/10"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>